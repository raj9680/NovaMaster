<div class="account-pages my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card mt-4">
                    <div class="card-header text-center p-4 bg-primary">
                        <h4 class="text-white mb-0 mt-0">Velonic</h4>
                        <h5 class="text-white font-13 mb-0">Create a new Account</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Access" asp-action="Register" class="p-2">

                            <div class="form-group mb-3">
                                <label asp-for="Email">Email :</label>
                                <input class="form-control" type="email" asp-for="Email" id="emailaddress" placeholder="john@deo.com">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="FullName">Full name :</label>
                                <input class="form-control" type="text" asp-for="FullName" id="username" placeholder="john deo">
                                @Html.ValidationMessage("FullName", "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Password">Password :</label>
                                <input class="form-control" type="password" asp-for="Password" id="password" placeholder="Enter your password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="CnfPassword">Confirm Password :</label>
                                <input class="form-control" type="password" asp-for="CnfPassword" id="password" placeholder="Confirm password">
                                <span class="text-danger" asp-validation-for="CnfPassword"></span>
                            </div>

                            <div class="form-group mb-4">
                                <div class="checkbox checkbox-success">
                                    <input id="remember" type="checkbox" checked>
                                    <label for="remember">
                                        I accept <strong><a href="#">Terms and Conditions</a></strong>
                                    </label>
                                </div>
                            </div>

                            <div class="form-group text-right mt-4 mb-4">
                                <div class="col-12">
                                    <button class="btn btn-md btn-primary waves-effect waves-light" type="submit">Register</button>
                                </div>
                            </div>

                            <div class="form-group row mb-0">
                                <div class="col-sm-12 text-center">
                                    <a asp-controller="Access" asp-action="Login">Already have account?</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
             </div>
        </div>
    </div>
</div>